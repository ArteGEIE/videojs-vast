{
  "name": "@arte/videojs-vast",
  "version": "0.2.9",
  "main": "./dist/cjs/index.js",
  "module": "./dist/mjs/index.js",
  "license": "MIT",
  "config": {
    "build": {
      "types": {
        "outdir": "type",
        "extension": ".d.ts"
      },
      "cjs": {
        "outdir": "dist/cjs",
        "extension": ".js"
      },
      "mjs": {
        "outdir": "dist/mjs",
        "extension": ".js"
      },
      "entries": {
        ".": "./src/index.js"
      }
    }
  },
  "peerDependencies": {
    "video.js": "^5.19.2 || ^6 || ^7"
  },
  "scripts": {
    "bundle:cjs": "node ./esbuild.js -t commonjs",
    "bundle:esm": "node ./esbuild.js -t es6",
    "bundle:local": "yarn bundle && yalc push",
    "bundle": "yarn bundle:cjs && yarn bundle:esm",
    "build": "yarn bundle",
    "start": "watch --interval=1 'yarn bundle:local' ./src/",
    "test": "jest --coverage",
    "prepublishOnly": "yarn test; yarn build"
  },
  "dependencies": {
    "@dailymotion/vast-client": "^4.0.0",
    "esbuild": "^0.15.0",
    "events": "^3.3.0",
    "videojs-contrib-ads": "^7.0.0",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.20.2",
    "babel-jest": "^29.3.1",
    "jest": "^26.0.0",
    "regenerator-runtime": "^0.13.7",
    "ts-jest": "^29.0.3",
    "watch": "^1.0.2"
  },
  "description": "Open Source VAST plugin for VideoJS",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArteGEIE/videojs-vast.git"
  },
  "keywords": [
    "vast"
  ],
  "author": "ARTE",
  "bugs": {
    "url": "https://github.com/ArteGEIE/videojs-vast/issues"
  },
  "homepage": "https://github.com/ArteGEIE/videojs-vast#readme"
}
