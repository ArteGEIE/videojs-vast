{
  "name": "@arte/videojs-vast",
  "version": "1.0.0-beta.0",
  "main": "./dist/cjs/index.js",
  "module": "./dist/mjs/index.js",
  "license": "MIT",
  "config": {
    "build": {
      "types": {
        "outdir": "type",
        "extension": ".d.ts"
      },
      "cjs": {
        "outdir": "dist/cjs",
        "extension": ".js"
      },
      "mjs": {
        "outdir": "dist/mjs",
        "extension": ".js"
      },
      "entries": {
        ".": "./src/index.js"
      }
    }
  },
  "peerDependencies": {
    "video.js": "^5.19.2 || ^6 || ^7 || ^8"
  },
  "scripts": {
    "build:cjs": "node ./esbuild.js -t commonjs",
    "build:esm": "node ./esbuild.js -t es6",
    "build:local": "npm run build && yalc push",
    "bundle:demo": "esbuild ./src/demo.js --bundle --outfile=docs/demo.js --minify --sourcemap",
    "build": "npm run build:cjs && npm run build:esm",
    "changelog": "conventional-changelog --preset angular --config changelog.config.js",
    "ci:changelog": "npm run changelog -- --same-file --infile CHANGELOG.md && npm run transform:changelog",
    "github_release": "babel-node github-release.mjs",
    "lint": "eslint ./src",
    "release": "standard-version",
    "start": "concurrently \"serve -l 3000 docs\" \"watch --interval=1 'npm run bundle:demo' ./src/\"",
    "test": "npm run test:e2e",
    "test:e2e": "wait-on http://localhost:3000/ & cypress run --browser chrome",
    "test:open": "cypress open",
    "transform:changelog": "node changelog.config.js --transform"
  },
  "dependencies": {
    "@dailymotion/vast-client": "^4.0.0",
    "@dailymotion/vmap": "^3.3.1",
    "videojs-contrib-ads": "^7.1.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.20.2",
    "concurrently": "^8.0.1",
    "conventional-changelog-cli": "^2.2.2",
    "conventional-commits-parser": "^3.2.4",
    "cypress": "^12.5.1",
    "esbuild": "^0.15.0",
    "eslint": "^7.32.0 || ^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.2",
    "regenerator-runtime": "^0.13.7",
    "semver": "^7.5.0",
    "serve": "^14.2.0",
    "standard-version": "^9.5.0",

    "video.js": "^8.0.4",
    "wait-on": "^7.0.1",
    "watch": "^0.13.0",
    "yargs": "^17.5.1"
  },
  "description": "Open Source VAST plugin for VideoJS",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArteGEIE/videojs-vast.git"
  },
  "keywords": [
    "vast"
  ],
  "author": "ARTE",
  "bugs": {
    "url": "https://github.com/ArteGEIE/videojs-vast/issues"
  },
  "homepage": "https://github.com/ArteGEIE/videojs-vast#readme"
}