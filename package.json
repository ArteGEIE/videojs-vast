{
  "name": "@arte/videojs-vast",
  "version": "0.5.0-beta.1",
  "main": "./dist/cjs/index.js",
  "module": "./dist/mjs/index.js",
  "license": "MIT",
  "config": {
    "build": {
      "types": {
        "outdir": "type",
        "extension": ".d.ts"
      },
      "cjs": {
        "outdir": "dist/cjs",
        "extension": ".js"
      },
      "mjs": {
        "outdir": "dist/mjs",
        "extension": ".js"
      },
      "entries": {
        ".": "./src/index.js"
      }
    }
  },
  "peerDependencies": {
    "video.js": "^5.19.2 || ^6 || ^7 || ^8"
  },
  "scripts": {
    "build:cjs": "node ./esbuild.js -t commonjs",
    "build:esm": "node ./esbuild.js -t es6",
    "build:local": "yarn build && yalc push",
    "bundle:demo": "esbuild ./src/demo.js --bundle --outfile=demo.js --minify --sourcemap",
    "build": "yarn build:cjs && yarn build:esm",
    "start": "watch --interval=1 'yarn bundle:demo' ./src/",
    "test": "jest --coverage",
    "prepublishOnly": "yarn test; yarn build; yarn bundle:demo"
  },
  "dependencies": {
    "@dailymotion/vast-client": "^4.0.0",
    "videojs-contrib-ads": "^7.1.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.20.2",
    "babel-jest": "^29.3.1",
    "esbuild": "^0.15.0",
    "jest": "^26.0.0",
    "regenerator-runtime": "^0.13.7",
    "video.js": "^8.0.4",
    "watch": "^0.13.0",
    "yargs": "^17.5.1"
  },
  "description": "Open Source VAST plugin for VideoJS",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArteGEIE/videojs-vast.git"
  },
  "keywords": [
    "vast"
  ],
  "author": "ARTE",
  "bugs": {
    "url": "https://github.com/ArteGEIE/videojs-vast/issues"
  },
  "homepage": "https://github.com/ArteGEIE/videojs-vast#readme"
}
